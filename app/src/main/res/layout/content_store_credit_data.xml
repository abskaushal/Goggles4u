<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ts.mobilelab.goggles4u.StoreCreditDataActivity"
    tools:showIn="@layout/activity_store_credit_data">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Balance : "
        android:id="@+id/textView86"
        android:padding="3dip"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dip"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:id="@+id/tv_crntbalance"
        android:padding="3dip"
        android:layout_marginLeft="2dip"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView86"
        android:layout_toRightOf="@+id/textView86"
        android:layout_toEndOf="@+id/textView86" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Balance History"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/textView90"
        android:layout_below="@+id/textView86"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dip" />
    <TextView android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="No Data avilable"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_balace"
        android:layout_alignParentLeft="true"
        android:dividerHeight="1dip"
        android:divider="@color/light_gray"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear_storeheader" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView90"
        android:layout_alignParentLeft="true"
        android:weightSum="4"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:id="@+id/linear_storeheader">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text=" Action"
            android:layout_weight="1"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dip"
           android:paddingLeft="3dip"

            android:id="@+id/textView88" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Bal. charge"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dip"

            android:layout_weight="1"
            android:id="@+id/textView91" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Bal. Remain"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dip"

            android:layout_weight="1.2"
            android:id="@+id/textView92" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text=" Date"
            android:textColor="@color/darkgray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dip"
           android:paddingLeft="2dip"

            android:layout_weight="0.8"
            android:id="@+id/textView93" />
    </LinearLayout>
</RelativeLayout>
