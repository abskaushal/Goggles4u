<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_productgrid"
                android:layout_width="146dip"
                android:layout_height="114dip"

                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:id="@+id/linear_colrlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dip"
                android:orientation="horizontal"
                android:padding="4dip">


            </LinearLayout>

            <TextView
                android:id="@+id/tv_productid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dip"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="New Text" />


            <TextView
                android:id="@+id/tv_productprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dip"
                android:text="New Text" />

            <RatingBar
                android:id="@+id/ratingBar_grid"
                style="@android:style/Widget.Holo.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dip"
                android:numStars="5"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dip"
                android:minHeight="30dip"
                android:orientation="horizontal"
                android:padding="4dip"
                android:weightSum="4">

                <Button
                    android:id="@+id/btn_tryon_grid"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dip"
                    android:layout_weight="2"
                    android:background="@color/btn_start"
                    android:text="Try On"
                    android:textColor="@color/maincolor"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imv_addtofav"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="2"
                    android:background="@color/btn_start"
                    android:padding="4dip"
                    android:src="@drawable/ic_favorite_outline_24dp" />

                <Button
                    android:id="@+id/btn_select_grid"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:layout_weight="1"
                    android:background="#aa121e"
                    android:minHeight="36dip"
                    android:text="Select"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_addtofava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dip"
            android:padding="4dip"
            android:src="@drawable/ic_favorite_outline_24dp"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>