<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="6dip"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ts.mobilelab.goggles4u.MyOrderRowActivity"
    tools:showIn="@layout/activity_my_order_row">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/tv_uname"
        android:padding="4dip"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView94"
        android:padding="4dip"
        android:textColor="@color/darkgray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/textView95"
        android:padding="4dip"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/textView94"
        android:layout_alignLeft="@+id/textView94"
        android:layout_alignStart="@+id/textView94" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_emailid"
        android:padding="4dip"
        android:textColor="@color/darkgray"
        android:layout_below="@+id/textView95"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dip" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_emailid"
        android:id="@+id/linear_subscription"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:layout_marginTop="2dip">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dip"
            android:id="@+id/switch1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General Subscription"
            android:layout_marginLeft="4dip"
            android:id="@+id/textView" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/linear_subscription"
        android:layout_marginTop="4dip"
        android:id="@+id/linerlt"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="Change Password"
            android:id="@+id/tv_chngpswd"
            android:layout_weight="1"
            android:padding="10dip"
            android:background="@drawable/btn_bg"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="10dip"
            android:textStyle="bold"
            android:id="@+id/tv_editinfo"
            android:layout_marginLeft="4dip"
            android:background="@drawable/btn_bg"
            android:textColor="@color/gray"
            android:gravity="center"

            />

    </LinearLayout>
    <View
        android:id="@+id/view22"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
       android:layout_marginTop="4dip"
       android:layout_below="@+id/linerlt"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/view22"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing ADDRESS"
            android:padding="4dip"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Addresses"
            android:textSize="16sp"
            android:gravity="right|end"
            android:visibility="gone"
            android:textColor="@color/macd_red"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout14"
        android:id="@+id/linearLayout15"
        android:padding="4dip"
        android:background="@drawable/bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:padding="4dip"
            android:textColor="@color/darkgray"
            android:id="@+id/textView96" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:padding="4dip"
        android:textColor="@color/darkgray"
        android:id="@+id/textView97"
        android:layout_below="@+id/linearLayout15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView100" />

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:id="@+id/linearLayout16"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView97"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="2dip">

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="Edit"
            android:id="@+id/textView98"
            android:layout_weight="1"
            android:padding="10dip"
            android:background="@drawable/btn_bg"
            android:textColor="@color/gray"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_weight="1"
            android:textSize="16sp"
            android:padding="10dip"
            android:textStyle="bold"
            android:id="@+id/textView99"
            android:layout_marginLeft="4dip"
            android:background="@drawable/btn_bg"
            android:textColor="@color/gray"
            android:gravity="center" />
    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view212"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_marginTop="4dip"
        android:layout_below="@+id/linearLayout15"
        android:background="@color/light_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:padding="4dip"
        android:textColor="@color/colorPrimary"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/textView101"
        android:layout_below="@+id/linearLayout15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dip" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout18"
        android:padding="4dip"
        android:layout_below="@+id/textView101"
        android:layout_alignLeft="@+id/textView101"
        android:layout_alignStart="@+id/textView101"
        android:background="@drawable/bg">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:padding="4dip"
            android:textColor="@color/darkgray"
            android:id="@+id/textView102" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:padding="4dip"
            android:textColor="@color/darkgray"
            android:id="@+id/textView103"
            android:layout_below="@+id/linearLayout15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/textView104" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:id="@+id/linearLayout17"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView103"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dip" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:text="Edit"
                android:id="@+id/textView105"
                android:layout_weight="1"
                android:padding="10dip"
                android:background="@drawable/btn_bg"
                android:textColor="@color/gray"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_weight="1"
                android:textSize="16sp"
                android:padding="10dip"
                android:textStyle="bold"
                android:id="@+id/textView106"
                android:layout_marginLeft="4dip"
                android:background="@drawable/btn_bg"
                android:textColor="@color/gray"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Credit"
        android:id="@+id/tv_storecredit"
        android:layout_below="@+id/linearLayout18"
        android:textColor="@color/deep_blue"
        android:padding="3dip"
        android:textStyle="bold"
        android:paddingLeft="4dip"

        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dip" />
    <View
        android:id="@+id/view2122"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_marginTop="4dip"
        android:layout_below="@+id/tv_storecredit"
        android:background="@color/light_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prescriptions"
        android:id="@+id/tv_prescriptions"
        android:layout_below="@+id/view2122"
        android:layout_alignParentLeft="true"
        android:padding="3dip"
        android:textStyle="bold"
        android:paddingLeft="4dip"
        android:textSize="16sp"
        android:textColor="@color/deep_blue"
        android:layout_alignParentStart="true" />

</RelativeLayout>
