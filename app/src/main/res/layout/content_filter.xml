<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ts.mobilelab.goggles4u.FilterActivity"
    android:weightSum="4"
    tools:showIn="@layout/activity_filter">


    <fragment
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:name="com.ts.mobilelab.goggles4u.views.utils.LeftMenuFragment"
        android:layout_weight="1"
        android:id="@+id/fragment_left" />

    <fragment
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:name="com.ts.mobilelab.goggles4u.views.utils.FilterDetailsListFragment"
        android:id="@+id/fragment_right"
        android:layout_weight="3"
        android:layout_gravity="center_vertical" />
</LinearLayout>

