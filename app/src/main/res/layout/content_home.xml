<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg_grey"
    android:orientation="vertical"
    tools:context="com.ts.mobilelab.goggles4u.HomeActivity"
    android:visibility="gone"
    tools:showIn="@layout/app_bar_home">

    <ListView
        android:id="@+id/listviewRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/transparent"
        android:layout_marginTop="?actionBarSize" />

    <RelativeLayout
        android:id="@+id/reltive_nwlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearhome_header"
        android:layout_marginTop="128dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imv_reload"
            android:layout_width="wrap_content"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/no_net_icon" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_reload"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dip"
            android:text="@string/nonet"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>
