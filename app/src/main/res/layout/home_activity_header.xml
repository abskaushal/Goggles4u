<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/home_bg_grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dip">


        <LinearLayout
            android:id="@+id/linearhome_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_home"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="center_vertical" />


            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip" />

            <RelativeLayout
                android:id="@+id/relativ1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newarrival"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view11"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="1dp"
                    android:layout_alignTop="@+id/txts"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/light_gray" />

                <View
                    android:id="@+id/view21"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/txts"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/light_gray" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@color/home_bg_grey"
                android:orientation="horizontal">

                <com.ts.mobilelab.goggles4u.utils.HorizontalListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:background="@color/home_bg_grey"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativ11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ourcoletion"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/textsize"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="1dp"
                    android:layout_alignTop="@+id/txt"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/light_gray" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="1dp"
                    android:layout_alignBottom="@+id/txt"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="@color/light_gray" />
            </RelativeLayout>


        </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
